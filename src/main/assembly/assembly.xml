<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <fileMode />
            <directory>${assemble.directory}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>bin/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <fileMode>0744</fileMode>
            <directory>${assemble.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>./</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
